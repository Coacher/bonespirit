# xxd completion

_xxd()
{
    local cur prev words cword
    _init_completion || return

    if [[ "${cur}" == -* ]]; then
        local opts='-autoskip -bits -cols -EBCDIC -e -groupsize -help -include
        -len -o -ps -postscript -plain -revert -seek -s -u -version'
        COMPREPLY=( $(compgen -W "${opts}" -- "${cur}") )
        return
    fi

    _filedir
}

complete -F _xxd xxd

